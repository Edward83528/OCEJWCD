<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AddCustomerServlet</servlet-name>
        <servlet-class>net.hello.servlets.AddCustomerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCustomerSuccessServlet</servlet-name>
        <servlet-class>net.hello.servlets.AddCustomerSuccessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCustomerFailureServlet</servlet-name>
        <servlet-class>net.hello.servlets.AddCustomerFailureServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCustomerServlet</servlet-name>
        <url-pattern>/add_customer.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCustomerSuccessServlet</servlet-name>
        <url-pattern>/add_customer_success.view</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCustomerFailureServlet</servlet-name>
        <url-pattern>/add_customer_failure.view</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <servlet>
        <servlet-name>jsp</servlet-name>
        <servlet-class>org.apache.jasper.servlet.JspServlet</servlet-class>
        <init-param>
            <param-name>development</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>     
</web-app>
